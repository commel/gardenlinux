[Unit]
Requires=var.mount
After=var.mount
Before=local-fs.target
DefaultDependencies=no

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStartPre=/usr/bin/mkdir -p /var/overlay/etc/systemd/system /var/overlay/.work/etc/systemd/system
ExecStart=/usr/bin/mount -t overlay -o lowerdir=/etc/systemd/system,upperdir=/var/overlay/etc/systemd/system,workdir=/var/overlay/.work/etc/systemd/system overlay /etc/systemd/system
ExecStop=/usr/bin/umount /etc/systemd/system

[Install]
WantedBy=local-fs.target
