#!/usr/bin/env bash
set -Eeuo pipefail

systemctl enable systemd-journald-audit.socket 
systemctl disable rsyslog.service

echo "## Nothing, replaced by 10-base-config.rules" > /etc/audit/rules.d/audit.rules

for r in /etc/audit/rules.d/*-*.rules.arm64; do
	if [ "$(uname -m)" = "x86_64" ]; then
		# remove arm specific rules on non arm architectures
		rm -f "$r"	
	else
		mv "$r" "${r%.*}"
	fi
done
